{
    "env": {
        "browser": true,
        "jquery": true,
        "webextensions": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "rules": {
        "computed-property-spacing": [
            "warn",
            "never"
        ],
        "no-redeclare": ["warn"],
        "no-unused-vars": [
            "warn",
            {"vars": "local", "args": "all"}
        ],
        "semi": [
            "warn",
            "always",
            {"omitLastInOneLineBlock": true}
        ],
        "switch-colon-spacing": [
            "warn",
            {"after": true, "before": false}
        ]
    },
    "ignorePatterns": ["jquery.min.js", "**/lib/*", "**/js/*"]
}
