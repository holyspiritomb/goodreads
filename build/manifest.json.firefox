{
  "name": "Available Reads Forked",
  "short_name": "AvailableReadsFork",
  "version": "2.0.2",
  "manifest_version": 3,
  "description": "Displays availability of Libby ebooks and audiobooks from your local library on GoodReads pages.",
  "homepage_url": "http://github.com/holyspiritomb/goodreads",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "options_ui": {
    "page": "src/options/index.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.goodreads.com/*"
      ],
      "js": [
        "src/goodreads_inject.js"
      ]
    },
    {
      "matches": [
        "https://www.overdrive.com/libraries"
      ],
      "js": [
        "src/overdrive_inject.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "icons/headphones.svg",
        "icons/throbber.gif",
        "icons/icon25.png",
        "icons/icon25-hover.png",
        "icons/icon48.png",
        "src/options/index.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {},
  "host_permissions": [
    "*://www.goodreads.com/*",
    "*://*.overdrive.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "availablereads@holyspiritomb"
    },
    "gecko_android": {
      "id": "availablereads@holyspiritomb",
      "strict_min_version": "116.0"
    }
  }
}
