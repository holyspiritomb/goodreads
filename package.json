{
  "repository": "github:holyspiritomb/goodreads",
  "version": "2.0.8",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:firefox": "cd ./build && ./build_firefox.sh",
    "build:chrome": "cd ./build && ./build_chrome.sh",
    "pack:chrome": "npm run build:chrome && crx3 -p dist.pem dist",
    "start:firefox": "npm run build:firefox && web-ext run",
    "lint:ff": "npm run build:firefox && web-ext lint",
    "lint:src": "eslint -c ./.eslintrc.json ./src",
    "sign:firefox": "npm run build:firefox && web-ext-submit",
    "run:iceraven": "npm run build:firefox && web-ext run -t firefox-android --adb-device=\"$WEB_EXT_ADB_DEVICE\" --firefox-apk io.github.forkmaintainers.iceraven"
  },
  "devDependencies": {
    "crx3": "^1.1.3",
    "eslint": "^8.57.0",
    "web-ext": "^7.2.0",
    "web-ext-submit": "^7.8.0"
  },
  "dependencies": {
    "jquery": "^3.7.1"
  }
}
